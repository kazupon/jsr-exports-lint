{
  "name": "jsr-exports-lint",
  "description": "JSR exports field lint for bundlers",
  "version": "0.4.2",
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "bugs": {
    "url": "https://github.com/kazupon/jsr-exports-lint/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/jsr-exports-lint.git"
  },
  "keywords": [
    "tsdown",
    "unbuild",
    "bundler",
    "exports",
    "jsr.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.30.1",
  "engines": {
    "node": ">= 20"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./tsdown": {
      "types": "./dist/tsdown.d.ts",
      "import": "./dist/tsdown.js",
      "require": "./dist/tsdown.js",
      "default": "./dist/tsdown.js"
    },
    "./unbuild": {
      "types": "./dist/unbuild.d.ts",
      "import": "./dist/unbuild.js",
      "require": "./dist/unbuild.js",
      "default": "./dist/unbuild.js"
    },
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "scripts": {
    "build": "tsdown",
    "changelog": "gh-changelogen --repo=kazupon/jsr-exports-lint",
    "clean": "git clean -df",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "dev:eslint": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "fix": "pnpm run --color \"/^fix:/\"",
    "fix:eslint": "eslint . --fix",
    "fix:knip": "knip --fix --no-exit-code",
    "fix:oxfmt": "oxfmt . --config ./node_modules/@kazupon/prettier-config/index.json",
    "fix:oxlint": "oxlint --type-aware --fix",
    "lint": "pnpm run --color \"/^lint:/\"",
    "lint:eslint": "eslint . --cache",
    "lint:knip": "knip",
    "lint:oxfmt": "oxfmt . --check --config ./node_modules/@kazupon/prettier-config/index.json",
    "lint:oxlint": "oxlint --type-aware",
    "lint:typecheck": "pnpm run typecheck",
    "play:tsdown": "pnpm run --filter @playground/tsdown build",
    "play:unbuild": "pnpm run --filter @playground/unbuild build",
    "prepack": "pnpm build",
    "prepare": "git config --local core.hooksPath .githooks",
    "release": "bumpp --commit \"release: v%s\" --all --push --tag",
    "test": "vitest run",
    "typecheck": "tsgo --noEmit --diagnostics"
  },
  "dependencies": {
    "picocolors": "^1.1.1"
  },
  "peerDependencies": {
    "tsdown": ">=0.9.6",
    "unbuild": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "tsdown": {
      "optional": true
    },
    "unbuild": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/markdown": "^7.5.1",
    "@kazupon/eslint-config": "^0.45.0",
    "@kazupon/eslint-plugin": "^0.7.1",
    "@kazupon/prettier-config": "^0.2.0",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20260221.1",
    "@vitest/eslint-plugin": "^1.6.4",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-markdown-preferences": "^0.40.2",
    "eslint-plugin-module-interop": "^0.3.1",
    "eslint-plugin-oxlint": "^1.35.0",
    "eslint-plugin-yml": "^1.19.1",
    "gh-changelogen": "^0.2.8",
    "knip": "^5.78.0",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.35.0",
    "oxlint-tsgolint": "^0.14.0",
    "publint": "^0.3.16",
    "tsdown": "catalog:",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "unbuild": "catalog:",
    "vitest": "^4.0.16"
  },
  "prettier": "@kazupon/prettier-config",
  "lint-staged": {
    "*.ts?(x)": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "oxlint --config .oxlintrc.json --type-aware --fix"
    ],
    "*.{js,mjs,cjs}": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "oxlint --config .oxlintrc.json --type-aware --fix"
    ],
    "*.{jsonc,json5,md,yml,yaml}": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "eslint --fix"
    ],
    "!(package).json": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "eslint --fix"
    ],
    "!(pnpm-lock).{yml,yaml}": [
      "oxfmt --config ./node_modules/@kazupon/prettier-config/index.json --no-error-on-unmatched-pattern",
      "eslint --fix"
    ]
  }
}
