{
  "name": "tsdown-exports-validator",
  "description": "JavaScript package exports field validation with tsdown",
  "version": "0.0.0",
  "license": "MIT",
  "funding": "https://github.com/sponsors/tsdown-exports-validator",
  "bugs": {
    "url": "https://github.com/kazupon/tsdown-exports-validator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/tsdown-exports-validator.git"
  },
  "keywords": [
    "tsdown",
    "exports",
    "jsr.json",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.7.1",
  "engines": {
    "node": ">= 20"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json",
    "./*": "./*"
  },
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "scripts": {
    "build": "tsdown",
    "changelog": "gh-changelogen --repo=kazupon/tsdown-exports-validator",
    "clean": "git clean -df",
    "dev": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "dev:eslint": "pnpx @eslint/config-inspector --config eslint.config.ts",
    "fix": "pnpm run --stream --color \"/^fix:/\"",
    "fix:eslint": "eslint . --fix",
    "fix:knip": "knip --fix --no-exit-code",
    "fix:prettier": "prettier . --write",
    "lint": "pnpm run --stream --color \"/^lint:/\"",
    "lint:eslint": "eslint .",
    "lint:knip": "knip",
    "lint:prettier": "prettier . --check",
    "prepack": "pnpm build",
    "prepare": "git config --local core.hooksPath .githooks",
    "release": "bumpp --commit \"release: v%s\" --all --push --tag",
    "test": "vitest run",
    "typecheck": "pnpm run --stream --color \"/^typecheck:/\"",
    "typecheck:tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/markdown": "^6.3.0",
    "@kazupon/eslint-config": "^0.26.1",
    "@kazupon/prettier-config": "^0.1.1",
    "@types/node": "^22.14.0",
    "@vitest/eslint-plugin": "^1.1.39",
    "bumpp": "^10.1.0",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsonc": "^2.20.0",
    "eslint-plugin-module-interop": "^0.3.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unicorn": "^58.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-yml": "^1.17.0",
    "gh-changelogen": "^0.2.8",
    "knip": "^5.47.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "publint": "^0.3.10",
    "tsdown": "^0.7.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.0",
    "vitest": "^3.1.1"
  },
  "prettier": "@kazupon/prettier-config",
  "lint-staged": {
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix"
    ],
    "*.{js,mjs,cjs}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,jsonc,json5,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
